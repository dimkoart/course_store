<h1>add courses</h1>
<form action="/add" method="POST">
    <div class="input-field ">
    <input  id="title" type="text" name="title" class="validate" required>
    <label for="title">course name</label>
     <span class="helper-text" data-error="Название" ></span>
    </div>

    <div class="input-field " >
    <input  id="price" type="number" class="validate" name="price" required min="1">
    <label for="price">course price</label>
     <span class="helper-text" data-error="ВВедите цену" ></span>
    </div>

    <div class="input-field " required>
    <input  id="img" type="text" class="validate" name="img">
    <label for="img">url img</label>
    </div>

    <button class="btn btn-primary"> add courses</button>
     <span class="helper-text" data-error="ВВедите url img" ></span>
</form>