<h1>edit courses {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field ">
    <input  id="title" type="text" name="title" class="validate" required value="{{course.title}}"> 
    <label for="title">course name</label>
     <span class="helper-text" data-error="Название" ></span>
    </div>

    <div class="input-field " >
    <input  id="price" type="number" class="validate" name="price" required min="1" value="{{course.price}}">
    <label for="price">course price</label>
     <span class="helper-text" data-error="ВВедите цену" ></span>
    </div>

    <div class="input-field " required>
    <input  id="img" type="text" class="validate" name="img" value="{{course.img}}">
    <label for="img">url img</label>
    </div>
     <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary"> edit courses</button>
     <span class="helper-text" data-error="ВВедите url img" ></span>
</form>